<div
  data-test-card
  class='gif-card font-["Lato"] min-w-[230px] min-h-[230px] bg-transparent group perspective'
>
  <div
    class='relative preserve-3d group-hover:rotate-y-180 w-full h-full duration-1000'
  >
    <div class='absolute backface-hidden w-full h-full'>
      <img
        class='w-full object-cover h-full'
        src={{@gif.images.original.url}}
        alt={{@gif.title}}
      />
    </div>
    <div
      class='absolute rotate-y-180 backface-hidden w-full h-full bg-white dark:bg-slate-900 shadow-xl overflow-hidden"'
    >
      <div
        class='text-center flex flex-col items-center justify-center h-full text-slate-900 dark:text-white px-2'
      >
        <p class='text-slate-800'>
          {{@gif.title}}
        </p>
        <label>Trending at:</label>
        <p class='font-bold text-slate-800'>{{format-datetime
            @gif.trending_datetime
          }}</p>
        <Gif::Tag @rating={{@gif.rating}} />
      </div>
    </div>
  </div>
</div>